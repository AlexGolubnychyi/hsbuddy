{
  "name": "hearth.stone.db",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "6.2.2",
    "npm": "3.9.5"
  },
  "scripts": {
    "start": "node ./server/bin/index.js",
    "tsci": "tsc -p tsconfig-int.json",
    "ngc": "ngc -p ngc.json",
    "rollup": "rollup -f iife -c -o public/temp/app.es2015.js",
    "convert-to-es5": "tsc --target es5 --allowJs public/temp/app.es2015.js --out public/temp/app.js",
    "migrate": "node ./server/bin/migration.js",
    "minify":"uglifyjs public/temp/app.js --screw-ie8 --compress --mangle --output public/app.min.js",
    "clean": "del-cli public/temp",
    "build": "npm run ngc && npm run tsci && npm run rollup && npm run convert-to-es5 && npm run minify && tsc && npm run clean",
    "postinstall": "npm run build && npm run migrate",

    "_bundle": "browserify -s main client/main.js > public/app.js ",
    "_build": "tsc && node ./server/bin/build && npm run minify",
    "_build1": "tsc && npm run _bundle && npm run minify"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.6",
    "@angular/compiler": "2.0.0-rc.6",
    "@angular/compiler-cli": "0.6.0",
    "@angular/core": "2.0.0-rc.6",
    "@angular/forms": "2.0.0-rc.6",
    "@angular/http": "2.0.0-rc.6",
    "@angular/platform-browser": "2.0.0-rc.6",
    "@angular/platform-browser-dynamic": "2.0.0-rc.6",
    "@angular/router": "3.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.6",
    "@angular/platform-server": "2.0.0-rc.6",
    "bluebird": "*",
    "browserify": "*",
    "uglifyjs": "*",
    "body-parser": "~1.15.1",
    "bootstrap": "^3.3.6",
    "cheerio": "*",
    "connect-mongo": "^1.3.1",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.4.1",
    "debug": "~2.2.0",
    "express": "~4.13.4",
    "express-session": "^1.14.0",
    "jade": "~1.11.0",
    "less-middleware": "^2.2.0",
    "mongodb": "^2.2.4",
    "mongoose": "^4.5.7",
    "morgan": "~1.7.0",
    "ng2-bootstrap": "1.1.2",
    "reflect-metadata": "^0.1.3",
    "request": "*",
    "rxjs": "5.0.0-beta.11",
    "rxjs-es":"5.0.0-beta.11",
    "serve-favicon": "~2.3.0",
    "systemjs": "0.19.27",
    "typescript": "2.0.2",
    "zone.js": "^0.6.17",
    "rollup": "0.34.13",
    "rollup-plugin-node-resolve": "2.0.0",
    "del-cli": "0.2.0",
    "compression":"1.6.2"
  }
}
