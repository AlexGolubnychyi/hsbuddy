extends layout

block scripts  
    if env === "development"
      script(src="node_modules/core-js/client/shim.min.js")
      script(src="node_modules/zone.js/dist/zone.js")
      //script(src="node_modules/reflect-metadata/Reflect.js")
      script(src="node_modules/systemjs/dist/system.src.js")
      //script(src="node_modules/ng2-bootstrap/bundles/ng2-bootstrap.min.js")
      script(src="client/system.config.js")
      script.
        System.import("app").catch(function(err){ console.error(err); });
    else
        script(src="node_modules/core-js/client/shim.min.js")
        script(src="node_modules/zone.js/dist/zone.min.js")
        script(src="app.min.js")

  block content
    hs-app  
        div(style="margin-top:20px").spinner
            div.bounce1
            div.bounce2
            div.bounce3
